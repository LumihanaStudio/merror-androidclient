<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AuthActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_login" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="6dp"
                    android:layout_marginRight="5dp"
                    android:background="#58AFE5"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="REGISTER"
                    android:textColor="#FFF"
                    android:textScaleX="0.9"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="5dp"
                    android:background="#58AFE5"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"></LinearLayout>

            <EditText
                android:id="@+id/register_id_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_background"
                android:hint="Input ID..."
                android:inputType="textNoSuggestions"
                android:padding="10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/register_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_background"
                android:hint="Input Password"
                android:inputType="textNoSuggestions|textPassword"
                android:padding="10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/register_password_re_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_background"
                android:hint="Input Re-Password"
                android:inputType="textNoSuggestions|textPassword"
                android:padding="10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/register_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_background"
                android:hint="Input Name"
                android:inputType="textNoSuggestions"
                android:padding="10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/register_birthday_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_background"
                android:hint="Input Birthday"
                android:inputType="textNoSuggestions"
                android:padding="10dp"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/register_register_btn"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:background="@drawable/login_background"
                    android:gravity="center"
                    android:text="Register"
                    android:textColor="#42A4F4"
                    android:textSize="18dp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
